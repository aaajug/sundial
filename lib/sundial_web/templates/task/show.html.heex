<div class="card my-5">
  <header class="card-header mb-0">
    <p class="card-header-title">
      <input type="checkbox" class="mr-3">
      <%= @task.description %>
    </p>
  </header>
  <div class="card-content">
    <div class="content">
      <%= @task.details %>
      <%= @task.deadline %>
      <%= @task.completed_on %>
    </div>
  </div>
  <footer class="card-footer">
    <%# put labels here %>
  </footer>
</div>